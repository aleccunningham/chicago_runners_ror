<div class="container">
  <h1>Login</h1>
  <div class="row">
    <div class="col-8">
      <%= form_tag '/login' do %>
        Email: <%= text_field_tag :email %>
        Password: <%= password_field_tag :password %>
        <%= submit_tag "Submit", class: 'btn btn-secondary' %>
      <% end %>
    </div>
    <div class="col-4"></div>
  </div>
</div>
